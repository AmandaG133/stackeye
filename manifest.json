{
  "name": "Stack Overflow Watchman",

  "version": "1.0",
  "manifest_version": 2,
  "description": "This plugin is used to notify users about new answers & comments on a watched question",

  "background": {
    "scripts": [
      "libs/jquery-1.9.1.js",
      "globals.js",
      "api_methods.js",
      "background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": ["*://*.stackexchange.com/*", "http://stackoverflow.com/*"],
      "js": ["libs/jquery-1.9.1.js", "content_scripts/cs.js"]
    }
  ],
  
  "browser_action": {
    "default_icon"    : "images/icon_so_48.png",
    "default_title"   : "Get latest notifications on your favorite questions",
    "default_popup"   : "popup.html"
  },
  
  "permissions": [
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}